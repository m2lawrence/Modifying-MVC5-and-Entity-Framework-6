@model _321191mvc.Models.Customer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutCustomers.cshtml";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Customers", "Index", "Customers", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Customers")</li>
                <li class="active">@Html.ActionLink("Create", "Create", "Customers")</li><!-- active means lite up, & used for page location. -->
                <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
            </ul>
        </div>
    </div>
</div>

<center>
    <div style="background:transparent !important" class="jumbotron">
        <h2><u>Customer's</u></h2>
        <p>Please register your details.</p>
    </div>
</center>
<!-- -------------------------------------------------------------------------------------------------------------------------- -->

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- build a columns 3 wide of 12 BootStrap JavaScript columns available per page. -->
        <div class="container">
            <!-- open container -->
            <div class="row">
                <!-- open row -->
                <div class="col-md-3 ">
                    <!-- Open column, middle sized, and x3 of them. -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Cust_ID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <br /><br />
                        @Html.DropDownList("Cust_ID", new List<SelectListItem>
                        {
                        new SelectListItem { Text="1", Value="1", Selected=true},
                        new SelectListItem { Text="2", Value="1"},
                        new SelectListItem { Text="3", Value="1"},
                        new SelectListItem { Text="4", Value="1"},
                        new SelectListItem { Text="5", Value="1"},
                        new SelectListItem { Text="6", Value="1"},
                        new SelectListItem { Text="7", Value="1"},
                        new SelectListItem { Text="8", Value="1"},
                        new SelectListItem { Text="9", Value="1"},
                        new SelectListItem { Text="10", Value="1"}
                        }, "Select")
                        <label for="lblErrorCust_ID" ForeColor="Red">ID in use, try again.</label>

                        @Html.ValidationMessageFor(model => model.Cust_ID, "", new { @class = "text-danger" })
                    </div><!-- close form -->
                </div><!-- close column -->
            </div><!-- close row -->
        </div><!-- close container -->

        <!-- build a columns 3 wide of 12 BootStrap JavaScript columns available per page. -->
        <div class="container">
            <!-- open container -->
            <div class="row">
                <!-- open row -->
                <div class="col-md-3 ">
                    <!-- Open column, middle sized, and x3 of them. -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <br />
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div><!-- close form -->
                </div><!-- close column -->

                <!-- build 4 columns with a width of 3 columns each = 12 BootStrap JavaScript columns available per page. -->
                <div class="col-md-3 ">
                    <!-- open column -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                        <br />
                        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                    </div><!-- close form -->
                </div><!-- close column -->

                <!-- build 4 columns with a width of 3 columns each = 12 BootStrap JavaScript columns available per page. -->
                <div class="col-md-3 ">
                    <!-- open column -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        <br />
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- build 4 columns with a width of 3 columns each = 12 BootStrap JavaScript columns available per page. -->
                <div class="col-md-3 ">
                    <!-- open column -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-2" })
                        <br />
                        @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div><!-- close row -->
        </div><!-- close container -->
        <!-- build a columns 3 wide of 12 BootStrap JavaScript columns available per page. -->
        <div class="container">
            <!-- open container -->
            <div class="row">
                <!-- open row -->
                <div class="col-md-3 ">
                    <!-- Open column, middle sized, and x3 of them. -->
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
   @Scripts.Render("~/bundles/jqueryval")
}
