                <!-- open row -->
                <div class="col-md-3 ">
                    <!-- Open column, middle sized, and x3 of them. -->
                    <div class="form-group">
                        <!-- open form -->
                        <u>@Html.DisplayNameFor(model => model.Cust_ID)</u>
