                </div><!-- close column -->

                <div class="col-md-3 ">
                    <!-- Open column, middle sized, and x3 of them. -->
                    <div class="form-group">
                        <!-- open form -->
                        <u>@Html.DisplayNameFor(model => model.Mobile)</u>
                        <br />
                        @Html.DisplayFor(model => model.Mobile)
                    </div><!-- close form -->
                </div><!-- close column -->
            </div><!-- close row -->
        </div><!-- close container -->

    </div><!-- close form horizontal -->
}
