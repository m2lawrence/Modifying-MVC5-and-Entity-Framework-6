                    <!-- Open column, middle sized, and x3 of them. -->
                    <div class="form-group">
                        <!-- open form -->
                        <u>@Html.DisplayNameFor(model => model.Name)</u>
                        <br />
                        @Html.DisplayFor(model => model.Name)
                    </div><!-- close form -->
                </div><!-- close column -->

                <div class="col-md-3 ">
                    <!-- Open column, middle sized, and x3 of them. -->
                    <div class="form-group">
                        <!-- open form -->
